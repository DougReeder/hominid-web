<!doctype html>
<html lang="{{ metadata.language }}">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{{ title + " — " + metadata.presentationTitle if title else metadata.presentationTitle }}</title>
	<meta name="author" content="{{ author.name or metadata.author.name }}" />
	{% if description %}
	<meta name="description" content="{{ description }}" />
	{%- endif %}
	<meta property="og:title" content="{{ title or metadata.presentationTitle }}" />
	<meta property="og:description" content="{{ description or metadata.presentationDescription }}" />
	<meta property="og:type" content="article" />
	<meta property="og:url" content="{{ metadata.origin + page.url }}" />
	<meta property="og:site_name" content="{{ metadata.title }}" />
	{% if previewImage.url -%}
		<meta property="og:image" content="{{ metadata.origin + previewImage.url }}" />
	{%- endif %}
	{% if previewImage.width -%}
		<meta property="og:image.width" content="{{ previewImage.width }}" />
	{%- endif %}
	{% if previewImage.height -%}
		<meta property="og:image.height" content="{{ previewImage.height }}" />
	{%- endif %}
	<meta property="og:updated_time" content="{{ dateLastModified | htmlDateString }}" />
	<meta property="article:published_time" content="{{ page.date | htmlDateString }}" />
	<meta property="article:modified_time" content="{{ dateLastModified | htmlDateString }}" />
	<meta property="article:author" content="{{ author.name or metadata.author.name }}">
	{% for tag in tags -%}
		<meta property="article:tag" content="{{ tag }}">
	{% endfor %}
	{% if not eleventyNavigation -%} <meta property="article:section" content="{{ metadata.presentationTitle }}"> {%- endif %}
	<meta name="generator" content="{{ eleventy.generator }}">

	<script type="application/ld+json">
		{
			"@context": "https://schema.org/",
			"@type": "{{ "CollectionPage" if eleventyNavigation else "PresentationDigitalDocument" }}",
			{% if eleventyNavigation %} "mainContentOfPage": {"@type": "WebPageElement", "cssSelector": ".postlist"}, {% endif %}
			"name": "{{ title or metadata.presentationTitle }}",
			"author": {{ author or metadata.author | dump | safe }},
	{% if abstract -%}
			"abstract": {{ abstract | dump | safe }},
	{%- endif %}
	{% if teaches -%}
			"teaches": "{{ teaches }}",
	{%- endif %}
	{% if description -%}
			"description": "{{ description }}",
	{%- endif %}
	{% if previewImage.url -%}
			"image": "{{ metadata.origin + previewImage.url }}",
	{%- endif %}
			{% if not eleventyNavigation -%} "datePublished": "{{ date | htmlDateString }}", {%- endif %}
			"dateModified": "{{ dateLastModified | htmlDateString }}",
			"keywords": [{% for tag in tags | filterTagList -%}"{{ tag }}" {%- if not loop.last %}, {% endif %}{% endfor %}]
		}
	</script>

	{#- Atom and JSON feeds included by default #}
	<link rel="alternate" href="/feed/presentationFeed.xml" type="application/atom+xml" title="{{ metadata.presentationTitle }}">
	<link rel="alternate" href="/feed/presentationFeed.json" type="application/json" title="{{ metadata.presentationTitle }}">

	{%- if canonicalUrl %}
		<link rel="canonical" href="{{ canonicalUrl }}" />
	{% else %}
		<link rel="canonical" href="{{ metadata.origin + page.url }}" />
	{%- endif %}

	{#-
	CSS bundles are provided via the `eleventy-plugin-bundle` plugin:
	1. You can add to them using `{% css %}`
	2. You can get from them using `{% getBundle "css" %}` or `{% getBundleFileUrl "css" %}`
	3. You can do the same for JS: {% js %}{% endjs %} and <script>{% getBundle "js" %}</script>
	4. Learn more: https://github.com/11ty/eleventy-plugin-bundle
	#}

	{#- Add an arbitrary string to the bundle #}
	{%- css %}* { box-sizing: border-box; }{% endcss %}
	{#- Add the contents of a file to the bundle #}
	{%- css %}{% include "public/css/index.css" %}{% endcss %}
	{#- Or add from node_modules #}
	{# {%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %} #}

	{#- Renders the CSS bundle using a separate file #}
	<link rel="stylesheet" href="{% getBundleFileUrl "css" %}">
</head>
<body>
<a href="#skip" class="visually-hidden">Skip to main content</a>

<header>
	<span class="home-link">{{ metadata.title }} — {{ metadata.presentationTitle }}</span>

	{#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
	<nav>
		<h2 class="visually-hidden">Top level navigation menu</h2>
		<ul class="nav">
			{%- for entry in collections.all | eleventyNavigation %}
				<li class="nav-item"><a href="{{ entry.url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a></li>
			{%- endfor %}
		</ul>
	</nav>
</header>

<main id="skip">
	{{ content | safe }}
</main>

<footer></footer>

<!-- Current page: {{ page.url | htmlBaseUrl }} -->
</body>
</html>
